<% if additional_targets.empty? %>
  <p> There are no additional targets available </p>
<% else %>
  <p>
    <select name="target_id" id="target_id" class="non-aligned">
      <% additional_targets.each do | c | %>
        <option value="<%= c.id %>"><%= c.name %></option>
      <% end %>
    </select>
    <input name="commit" type="submit" value="Save"   id="script_target_id_submit"/>
    <input name="cancel" type="submit" value="Cancel" id="script_target_id_cancel"/>
  </p>
<% end %>