<h2>List of script categories</h2>

<div class="rowlist_page">

  <div id="record_list">

    <table class="rowlist_table">
      <tr>
        <th>Name</th>
        <th>Functions</th>
      </tr>

      <% @script_categories.each_with_index do |script_category,index| %>
        <tr class="<%= index.modulo(2) == 0 ? "even" : "odd" %>">
          <td><%= script_category.name %></td>
          <td>
            [
            <%= link_to 'Edit', edit_script_category_path(script_category) %>
            |
            <%= link_to 'Delete', script_category, method: :delete, data: { confirm: 'Are you sure?' } %>
            ]
          </td>
        </tr>
      <% end %>
    </table>

    <br />

    <%= link_to 'New Script Category', new_script_category_path %>

  </div>

</div>