<h2>List of notification groups</h2>

<div class="rowlist_page">

  <div id="record_list">

    <table class="rowlist_table">
      <tr>
        <th>Name</th>
        <th>Functions</th>
      </tr>

      <% @notify_groups.each_with_index do |notify_group,index| %>
        <tr class="<%= index.modulo(2) == 0 ? "even" : "odd" %>">
          <td><%= notify_group.name %></td>
          <td>
            [
            <%= link_to 'Edit', edit_notify_group_path(notify_group) %>
            |
            <%= link_to 'Emails', notify_group_emails_path(notify_group) %>
            |
            <%= link_to 'Delete', notify_group, method: :delete, data: { confirm: 'Are you sure?' } %>
            ]
          </td>
        </tr>
      <% end %>
    </table>

    <br />

    <%= link_to 'New Notification Group', new_notify_group_path %>

  </div>

</div>