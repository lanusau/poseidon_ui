<h2>List of target types</h2>

<div class="rowlist_page">

  <div class="instruction">
    Note: you can not delete target type that has any targets. Please delete targets
    first.
  </div>

  <div id="record_list">

    <table class="rowlist_table">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Functions</th>
      </tr>

      <% @target_types.each_with_index do |target_type,index| %>
        <tr class="<%= index.modulo(2) == 0 ? "even" : "odd" %>">
          <td><%= target_type.id %> </td>
          <td><%= target_type.name %></td>
          <td>
            [
            <%= link_to 'Edit', edit_target_type_path(target_type) %>
            |
            <% if target_type.targets.empty? %>
              <%= link_to 'Delete', target_type, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% else %>
              Delete
            <% end %>
            ]
          </td>
        </tr>
      <% end %>
    </table>

    <br />

    <%= link_to 'New Target Type', new_target_type_path %>

  </div>

</div>