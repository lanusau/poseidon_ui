<h2>List of emails for notification group [<%=@notify_group.name %>] </h2>

<div class="rowlist_page">

  <div id="record_list">

    <table class="rowlist_table">
      <tr>
        <th>Severity</th>
        <th>Email</th>
        <th>Functions</th>
      </tr>

      <% @notify_group_emails.each_with_index do |notify_group_email,index| %>
        <tr class="<%= index.modulo(2) == 0 ? "even" : "odd" %>">
          <td><%= notify_group_email.severity_str %></td>
          <td><%= notify_group_email.email_address %></td>
          <td>
            [
            <%= link_to 'Delete', notify_group_email_path(@notify_group,notify_group_email), method: :delete, data: { confirm: 'Are you sure?' } %>
            ]
          </td>
        </tr>
      <% end %>
    </table>

    <br />

    <%= link_to 'Add new email', new_notify_group_email_path %>

  </div>

</div>