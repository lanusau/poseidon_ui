<h2>List of scripts <%= "for target [#{@target.name}]" unless @target.nil? %> </h2>

<div class="rowlist_page">

  <%= form_tag scripts_path(:page=>1) do  -%>
    <select id="script_category_id" name="script_category_id" >
      <option <%=  "selected" if @script_category_id.nil? || @script_category_id.downcase.to_sym == :all%> value="all">All</option>
      <% @script_categories.each do | cat | %>
        <option <%= "selected" if @script_category_id == cat.id.to_s %> value="<%= cat.id %>"><%= cat.name %></option>
      <% end %>
    </select>
    <%=  text_field_tag 'script_search_name', @script_search_name, :size => 20, :id=> "script_search_name" %>
  <% end -%>

  <p />

  <div id="record_list">
    <%= render :partial=>"list" %>
  </div>

  <p />

  <%= link_to 'New Script', new_script_path %>

</div>