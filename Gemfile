source 'https://rubygems.org'

gem 'rails', '3.2.6'

# MySQL driver is needed to access repository
# Other drivers are needed for test query functionality in the script editing page
gem 'mysql2'
gem "dbd-pg", "~> 0.3.9"
gem "dbd-mysql", "~> 0.4.4"
gem "ruby-oci8", "~> 2.1.2"

# Use nested forms
gem "nested_form", :git => 'https://github.com/lanusau/nested_form.git'


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  gem 'therubyracer', :platforms => :ruby

  gem 'uglifier', '>= 1.0.3'
end

# Use JQuery
gem 'jquery-rails'

# For password hash
gem 'bcrypt-ruby', '~> 3.0.0'

# Wrapper for OpenSSL
gem 'encryptor', '~> 1.1.3'

# Pagination
gem "will_paginate"

group :development do
  gem 'debugger'
end

group :test do
  gem 'debugger'
end


