source 'https://rubygems.org'

gem 'rails', '4.2.0'
gem 'protected_attributes'

# MySQL driver is needed to access repository
# Other drivers are needed for test query functionality in the script editing page
gem 'mysql2'
gem "dbd-pg", "~> 0.3.9"
gem "dbd-mysql", "~> 0.4.4"
gem "ruby-oci8", "~> 2.1.2"

# Use nested forms
gem "nested_form", ">= 0.3.1"


gem 'sass-rails'

# Use JQuery
gem 'jquery-rails'

# For password hash
gem 'bcrypt'

# Wrapper for OpenSSL
gem 'encryptor', '~> 1.3.0'

# Pagination
gem "will_paginate"

# Debugger
group :development,:test do
 gem 'byebug', '~> 3.1.2'
end

